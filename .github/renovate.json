{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "kind/enhancement",
    "status/2-needs-review"
  ],
  "packageRules": [
    {
      "groupName": "Go dependencies",
      "groupSlug": "go-dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchDatasources": [
        "go"
      ]
    },
    {
      "groupName": "JS dependencies",
      "groupSlug": "js-dependencies",
      "matchManagers": [
        "nvm",
        "npm"
      ],
      "matchDatasources": [
        "npm",
        "node-version"
      ]
    }
  ],
  "postUpdateOptions":[
    "gomodTidy"
  ]
}